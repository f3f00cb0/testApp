        .grid--fit {
            -ms-grid-columns: minmax(600px, 1fr) [auto-fit];
            grid-template-columns: repeat(auto-fit, minmax(600px, 1fr));
        }

        .grid__child {
            background: #1b2036;
            border: 1px solid #dcdcdc00;
            border-radius: 5px;
            overflow: hidden;
        }

        .text {
            padding: 1rem;
        }

        .card-head {
