        }

        img {
            width: 100%;
            object-fit: cover;
            text-transform: uppercase;
        }

        .location {
            font-size: 0.9rem;
            text-transform: capitalize;
            display: -webkit-box;
            display: -ms-flexbox;
            display: flex;
            -webkit-box-align: center;
            -ms-flex-align: center;
            align-items: center;
