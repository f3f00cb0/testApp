        <div class="column is-half is-offset-one-quarter">
                {{ form_start(form) }}
                {{ form_widget(form) }}
                <button class="button margin-top1">{{ button_label|default('Enregistrer') }}</button>
                {{ form_end(form) }}

        </div>
    </div>
</div>#}
</body>
</html>