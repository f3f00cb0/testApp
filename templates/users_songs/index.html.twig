{% extends 'base.html.twig' %}

{% block title %}UsersSongs index{% endblock %}

{% block body %}
    <h1>UsersSongs index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Song</th>
                <th>Song Title</th>
            </tr>
        </thead>
        <tbody>
        {% for users_song in users_songs %}
            <tr>
                <td>{{ users_song.id }}</td>
                <td>{{ users_song.song }}</td>
                <td>{{ users_song.songname }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('users_songs_new') }}">Create new</a>

    <br>
    <div>
        <h1>AllSongs index</h1>

        <table class="table">
            <thead>
            <tr>
                <th>Id</th>
                <th>Song</th>
                <th>Song Title</th>
                <th>User</th>
            </tr>
            </thead>
            <tbody>
            {% for all_users_song in all_users_songs %}
                <tr>
                    <td>{{ all_users_song.id }}</td>
                    <td>{{ all_users_song.song }}</td>
                    <td>{{ all_users_song.songname }}</td>
                    <td>{{ all_users_song.user }}</td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
